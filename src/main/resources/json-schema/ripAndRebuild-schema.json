{
   "$schema":"http://json-schema.org/draft-04/schema#",
   "type":"object",
   "properties":{
      "clli":{
         "type":"string",
         "minLength":1
      },
      "deviceIP":{
         "type":"string",
         "oneOf":[
            {
               "format":"ipv4"
            }
         ]
      },
      "scp":{
         "type":"array",
         "minItems":1,
         "maxItems":10,
         "items":[
            {
               "type":"string",
               "minLength":1
            }
         ]
      },
      "vendor":{
         "type":"string"
      },
      "model":{
         "type":"string"
      },
      "pon":{
         "type":"object",
         "properties":{
            "ontId":{
               "type":"string",
			    "minLength":1
            },
            "ontPort":{
               "type":"string",
			    "minLength":1
            }
         },
         "required":[
            "ontId",
            "ontPort"
         ]
      }
   },
   "required":[
      "clli",
      "scp"
   ]
}